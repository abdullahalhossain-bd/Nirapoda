<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#1E88E5">  <!-- Blue color for the ripple -->
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />  <!-- Background color (white) -->
            <stroke
                android:width="1dp"
                android:color="#BDBDBD" />  <!-- Border color (light gray) -->
        </shape>
    </item>
</ripple>