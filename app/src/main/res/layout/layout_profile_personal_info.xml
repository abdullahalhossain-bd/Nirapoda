<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Full Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/personal_info_full_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="4dp"
                    android:text="edit"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_600"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/personal_info_full_name_input_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_gray"
                android:padding="12dp"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                tools:text="Sarah Johnson" />
        </LinearLayout>

        <!-- Email Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/personal_info_email_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="4dp"
                    android:text="edit"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_600"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/personal_info_email_input_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_gray"
                android:padding="12dp"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                tools:text="sarah.johnson@example.com" />
        </LinearLayout>

        <!-- Phone Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/personal_info_phone_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="4dp"
                    android:text="edit"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_600"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/personal_info_phone_input_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_gray"
                android:padding="12dp"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                tools:text="+1 (555) 123-4567" />
        </LinearLayout>

        <!-- Home Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Address"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/personal_info_address_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="4dp"
                    android:text="edit"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_600"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/personal_info_address_input_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field_gray"
                android:padding="12dp"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                tools:text="123 Safety Street, Secure City, SC 12345" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>