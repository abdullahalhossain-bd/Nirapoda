<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/txt_helpline_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="National Suicide Prevention Lifeline"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_helpline_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_tag_red"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Suicide"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_helpline_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free and confidential support for people in distress, plus prevention and crisis resources."
            android:textColor="#616161"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_time"
                app:tint="#757575"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available: 24/7"
                android:textColor="#757575"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_helpline_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="suicidepreventionlifeline.org"
            android:textColor="#5E35B1"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_helpline_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7652f7"
            android:drawableStart="@drawable/ic_call"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:text="1-800-273-8255"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>