<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dataUsageCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Usage"
            android:textSize="18sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monitor and manage data consumption"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="20dp" />

        <!-- Data Usage Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvDataUsageInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="245 MB used of 500 MB"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvDataUsagePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="49%"
                    android:textSize="12sp"
                    android:textColor="#757575" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressDataUsage"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:progress="49"
                android:progressTint="@color/primary"
                android:background="#E0E0E0" />
        </LinearLayout>

        <!-- Data Savings Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Savings with Offline Mode"
            android:textSize="14sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_gray_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- Daily Savings -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Savings"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 MB"
                    android:textSize="18sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Monthly Savings -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Savings"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.3 GB"
                    android:textSize="18sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Data Usage by Feature -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data usage by feature"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_gray_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp">

            <!-- Maps & Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Maps &amp; Navigation"
                    android:textSize="12sp"
                    android:textColor="#212121" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 MB"
                    android:textSize="12sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Safety Alerts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Safety Alerts"
                    android:textSize="12sp"
                    android:textColor="#212121" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85 MB"
                    android:textSize="12sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Voice Commands -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Voice Commands"
                    android:textSize="12sp"
                    android:textColor="#212121" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 MB"
                    android:textSize="12sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Other Features -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other Features"
                    android:textSize="12sp"
                    android:textColor="#212121" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 MB"
                    android:textSize="12sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Data Limit Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Data Limit"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvDataLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 MB"
                    android:textSize="14sp"
                    android:textColor="#212121" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarDataLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="20"
                android:progress="5"
                android:progressTint="@color/primary"
                android:thumbTint="@color/primary" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>